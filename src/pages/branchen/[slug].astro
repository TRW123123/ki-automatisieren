---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { industries } from "../../data/industries";

export function getStaticPaths() {
    return industries.map((industry) => ({
        params: { slug: industry.slug },
        props: { industry },
    }));
}

const { industry } = Astro.props;

// Schema Markup for Industry Solution
const serviceSchema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    name: industry.hero.title,
    description: industry.seo.description,
    provider: {
        "@type": "Organization",
        name: "KI Automatisieren",
    },
    areaServed: "DE",
    serviceType: industry.slug,
});
---

<BaseLayout
    title={industry.seo.title}
    description={industry.seo.description}
    type="article"
>
    <script type="application/ld+json" set:html={serviceSchema} />

    <!-- Hero -->
    <section class="py-20 md:py-32 relative overflow-hidden">
        <div class="absolute inset-0 bg-indigo-500/5 -z-10"></div>
        <div class="container mx-auto px-4">
            <div class="max-w-4xl">
                <div
                    class="text-sm font-medium text-indigo-400 mb-4 tracking-wide uppercase"
                >
                    Branche
                </div>
                <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
                    {industry.hero.title}
                </h1>
                <p
                    class="text-xl text-muted-foreground mb-8 max-w-2xl leading-relaxed"
                >
                    {industry.hero.subtitle}
                </p>
                <a
                    href="#kontakt"
                    class="inline-flex items-center justify-center h-12 px-8 rounded-xl bg-indigo-500 text-white font-bold hover:bg-indigo-400 transition-colors"
                >
                    Branchen-Lösung anfragen
                </a>
            </div>
        </div>
    </section>

    <!-- Problems -->
    <section class="py-24 border-y border-white/5 bg-card/30">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-12 text-center">
                {industry.problem.title}
            </h2>
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto"
            >
                {
                    industry.problem.items.map((item) => (
                        <div class="p-6 rounded-xl bg-background border border-white/5 flex items-start gap-4">
                            <div class="w-1 h-1 rounded-full bg-red-500 mt-2.5 shrink-0" />
                            <p class="text-lg">{item}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Process -->
    <section class="py-24">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-16 text-center">
                {industry.process.title}
            </h2>
            <div class="relative">
                <div
                    class="absolute top-1/2 left-0 w-full h-0.5 bg-white/10 -translate-y-1/2 hidden md:block z-0"
                >
                </div>
                <div
                    class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 relative z-10"
                >
                    {
                        industry.process.steps.map((step, index) => (
                            <div class="bg-background md:bg-transparent p-6 md:p-0 rounded-xl border border-white/5 md:border-none">
                                <div class="w-10 h-10 rounded-full bg-card border-2 border-indigo-500 text-indigo-500 font-bold flex items-center justify-center mb-6 mx-auto md:mx-0 relative z-10">
                                    {index + 1}
                                </div>
                                <h3 class="text-xl font-bold mb-2">
                                    {step.title}
                                </h3>
                                <p class="text-muted-foreground">
                                    {step.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits -->
    <section class="py-24 bg-indigo-500/5 border-t border-white/5">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-12">{industry.benefits.title}</h2>
            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto"
            >
                {
                    industry.benefits.items.map((item) => (
                        <div class="p-8 rounded-2xl bg-card border border-indigo-500/20 shadow-[0_0_30px_rgba(99,102,241,0.05)]">
                            <p class="text-xl md:text-2xl font-bold text-indigo-400">
                                {item}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Case Study -->
    {
        industry.caseStudy && (
            <section class="py-24 border-t border-white/5 bg-card/30 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-transparent pointer-events-none" />
                <div class="container mx-auto px-4 relative z-10">
                    <div class="max-w-4xl mx-auto">
                        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-indigo-500/30 bg-indigo-500/10 text-indigo-400 text-xs font-medium mb-6">
                            <span class="w-1.5 h-1.5 rounded-full bg-indigo-400 animate-pulse" />
                            REFERENZ
                        </div>
                        <h2 class="text-3xl md:text-4xl font-bold mb-8 text-white">
                            Wie{" "}
                            <span class="text-indigo-400">
                                {industry.caseStudy.company}
                            </span>{" "}
                            {industry.caseStudy.result}
                        </h2>

                        <div class="bg-background/80 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-10 shadow-2xl">
                            <div class="flex flex-col md:flex-row gap-8 items-center">
                                <div class="w-full md:w-1/3 flex justify-center">
                                    <div class="w-40 h-40 bg-white/5 rounded-full flex items-center justify-center border border-white/10 p-6">
                                        <img
                                            src={industry.caseStudy.image}
                                            alt={`${industry.caseStudy.company} Logo`}
                                            class="max-w-full max-h-full object-contain"
                                            loading="lazy"
                                        />
                                    </div>
                                </div>
                                <div class="w-full md:w-2/3 text-center md:text-left">
                                    <p class="text-lg md:text-xl text-muted-foreground leading-relaxed mb-8">
                                        "{industry.caseStudy.description}"
                                    </p>
                                    <a
                                        href={industry.caseStudy.link}
                                        class="inline-flex items-center text-indigo-400 font-bold hover:text-indigo-300 transition-colors group"
                                    >
                                        Fallstudie lesen
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1"
                                        >
                                            <>
                                                <path d="M5 12h14" />
                                                <path d="m12 5 7 7-7 7" />
                                            </>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        )
    }

    <!-- CTA -->
    <section
        id="kontakt"
        class="py-24 bg-card border-t border-white/5 text-center"
    >
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold mb-6">
                Starten Sie in Ihrer Branche
            </h2>
            <a
                href="mailto:kontakt@ki-automatisieren.de"
                class="inline-block px-8 py-4 bg-white text-black font-bold rounded-xl hover:bg-gray-200 transition-colors"
            >
                Erstgespräch vereinbaren
            </a>
        </div>
    </section>
</BaseLayout>
