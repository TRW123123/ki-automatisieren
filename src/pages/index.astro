---
import BaseLayout from "../layouts/BaseLayout.astro";

const copy = {
  hero: {
    title: "Ihr Team schläft nachts. Unsere KI-Systeme nicht.",
    subtitle: "Wir automatisieren alles, von der E-Mail bis zur Rechnung. Ergebnisse statt KI-Hype.",
    cta: "Kostenlose Analyse"
  },
  features: [
    { title: "Outbound Vertrieb", desc: "Personalisierte E-Mails und intelligente Nachverfolgung." },
    { title: "Marketing & SEO", desc: "Automatische Content-, SEO- und Anzeigenoptimierung." },
    { title: "KI-Kundenservice", desc: "24/7 personalisierte Antworten für Ihre Kunden." },
    { title: "Datenanalyse", desc: "Echtzeit-Einblicke und bessere Entscheidungen." }
  ]
};
---

<BaseLayout title="KI Agentur für Vertriebsautomatisierung" description="Wir automatisieren Lead-Qualifizierung, Outreach und CRM-Prozesse.">
  
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6 max-w-4xl mx-auto">
        {copy.hero.title}
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto mb-10">
        {copy.hero.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#kontakt" class="inline-flex items-center justify-center h-12 px-8 rounded-xl bg-lime-500 text-black font-bold text-lg hover:bg-lime-400">
          {copy.hero.cta}
        </a>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-24 bg-card/50 border-y border-white/5">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {copy.features.map(feature => (
          <div class="p-8 rounded-2xl bg-background border border-white/5">
            <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
            <p class="text-muted-foreground leading-relaxed mb-4">
              {feature.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

</BaseLayout>
