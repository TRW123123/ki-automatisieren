---
import BaseLayout from "@/layouts/BaseLayout.astro";
// Button import removed - using static HTML
// import { ArrowRight, Bot, TrendingUp, MessageCircle, BarChart3, CheckCircle, Star } from "lucide-react";

// Content Constants (Static)
const copy = {
  hero: {
    title: "Ihr Team schläft nachts. Unsere KI-Systeme nicht.",
    subtitle: "Wir automatisieren alles, von der E-Mail bis zur Rechnung. Ergebnisse statt KI-Hype.",
    cta: "Kostenlose Analyse",
    proof: "100+ B2B Teams vertrauen auf unsere praktischen Automatisierungen."
  },
  features: [
    {
      title: "Outbound Vertrieb",
      desc: "Personalisierte E-Mails und intelligente Nachverfolgung.",
      proof: "500+ Nachrichten / Tag",
      // icon: TrendingUp
    },
    {
      title: "Marketing & SEO",
      desc: "Automatische Content-, SEO- und Anzeigenoptimierung.",
      proof: "+85% SEO Score",
      // icon: Bot
    },
    {
      title: "KI-Kundenservice",
      desc: "24/7 personalisierte Antworten für Ihre Kunden.",
      proof: "40% mehr Zufriedenheit",
      // icon: MessageCircle
    },
    {
      title: "Datenanalyse",
      desc: "Echtzeit-Einblicke und bessere Entscheidungen.",
      proof: "60% schneller",
      // icon: BarChart3
    }
  ]
};
---

<BaseLayout title="KI Agentur für Vertriebsautomatisierung | n8n & AI" description="Skalieren Sie Ihren Vertrieb mit KI & n8n. Wir automatisieren Lead-Qualifizierung, Outreach und CRM-Prozesse. Integrierte Lösungen für Makler, Agenturen & SaaS.">
  
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-lime-500/5 via-transparent to-transparent pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-lime-500/10 border border-lime-500/20 text-lime-400 text-sm font-medium mb-8 animate-fade-in">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lime-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-lime-500"></span>
        </span>
        KI Automatisierung für B2B
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-6 max-w-4xl mx-auto leading-[1.1]">
        {copy.hero.title}
      </h1>
      
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto mb-10 leading-relaxed">
        {copy.hero.subtitle}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#kontakt" class="inline-flex items-center justify-center h-12 px-8 rounded-xl bg-lime-500 text-black font-bold text-lg hover:bg-lime-400 transition-all hover:scale-105 shadow-[0_0_20px_rgba(163,230,53,0.3)]">
          {copy.hero.cta}
          <ArrowRight className="ml-2 w-5 h-5" />
        </a>
        <a href="#cases" class="inline-flex items-center justify-center h-12 px-8 rounded-xl border border-white/10 hover:bg-white/5 font-medium transition-colors">
          Fallstudien ansehen
        </a>
      </div>

      <div class="mt-12 pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-center gap-6 text-sm text-muted-foreground">
        <p>{copy.hero.proof}</p>
        <div class="flex items-center gap-1 text-lime-400">
          <Star className="w-4 h-4 fill-current" />
          <Star className="w-4 h-4 fill-current" />
          <Star className="w-4 h-4 fill-current" />
          <Star className="w-4 h-4 fill-current" />
          <Star className="w-4 h-4 fill-current" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-24 bg-card/50 border-y border-white/5">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold mb-4">KI-Lösungen für Wachstum</h2>
        <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
          Wir integrieren intelligente Systeme tief in Ihre Prozesse.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {copy.features.map(feature => (
          <div class="p-8 rounded-2xl bg-background border border-white/5 hover:border-lime-500/50 transition-colors group">
            <div class="w-12 h-12 rounded-xl bg-lime-500/10 flex items-center justify-center mb-6 text-lime-400 group-hover:scale-110 transition-transform">
              <feature.icon className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
            <p class="text-muted-foreground leading-relaxed mb-4">
              {feature.desc}
            </p>
            <div class="inline-flex items-center gap-2 text-xs font-semibold text-lime-400 bg-lime-500/10 px-3 py-1 rounded-full">
              <CheckCircle className="w-3 h-3" />
              {feature.proof}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="kontakt" class="py-24 relative overflow-hidden">
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-3xl mx-auto p-12 rounded-3xl bg-gradient-to-b from-card to-background border border-white/10 shadow-2xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Starten Sie Ihre Transformation</h2>
        <p class="text-lg text-muted-foreground mb-8">
          Lassen Sie uns in 30 Minuten herausfinden, wie viel Zeit und Geld Sie sparen können.
        </p>
        <a href="mailto:kontakt@ki-automatisieren.de" class="inline-flex items-center justify-center h-14 px-8 rounded-xl bg-white text-black font-bold text-lg hover:bg-gray-200 transition-colors w-full md:w-auto">
          Gespräch vereinbaren
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
