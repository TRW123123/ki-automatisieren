---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/Hero.astro";
import Agitate from "@/components/Agitate.tsx";
import GoToMarketTimeline from "@/components/GoToMarketTimeline.tsx";
import SolutionSection from "@/components/SolutionSection.tsx";
import Cases from "@/components/Cases.tsx";
import QuickAnalysisModal from "@/components/QuickAnalysisModal.astro";

// Pure Strict Alignment Index Page
// Structure: Hero -> Agitate -> GoToMarketTimeline -> Solution -> Cases

// Organization + WebSite Schema (required for homepage)
const organizationSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "KI Automatisieren",
  url: "https://ki-automatisieren.de",
  logo: "https://ki-automatisieren.de/logo.png",
  description:
    "Durchgängige KI-Automatisierung vom Lead bis zum Meeting. Vertriebs- und Marketingautomatisierung für B2B-Unternehmen.",
  sameAs: [],
});

const websiteSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "KI Automatisieren",
  url: "https://ki-automatisieren.de",
});
---

<BaseLayout
  title="KI Automatisieren – Vertriebs- und Marketingautomatisierung"
  description="Durchgängige KI-Automatisierung vom Lead bis zum Meeting. Steigern Sie Ihren Umsatz mit Outbound & Inbound, Content- und Social-Media-Automatisierung."
>
  <!-- Organization + WebSite Schema -->
  <script type="application/ld+json" set:html={organizationSchema} />
  <script type="application/ld+json" set:html={websiteSchema} />

  <Hero />
  <Agitate client:visible />
  <SolutionSection client:visible />
  <GoToMarketTimeline client:visible />
  <Cases client:visible />
  <QuickAnalysisModal />
</BaseLayout>
