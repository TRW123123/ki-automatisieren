---
import BaseLayout from "@/layouts/BaseLayout.astro";

const content = {
  title: "Über uns | KI Automatisieren",
  description:
    "KI Automatisieren baut KI-Systeme für Leadgenerierung, Outbound und Vertriebsautomatisierung.",
  company: {
    title: "Wer wir sind",
    text: "KI Automatisieren ist ein spezialisierter Anbieter von KI- und Automatisierungssystemen für Vertrieb und Marketing. Wir entwickeln und implementieren Systeme, die Leads finden, ansprechen und qualifizieren – vollautomatisch.",
  },
  systems: {
    title: "Was wir bauen",
    text: "Unsere Systeme übernehmen die zeitintensiven Aufgaben im Vertrieb: Lead-Recherche, personalisiertes Outreach, Erst-Qualifizierung per KI-Caller und automatische CRM-Dokumentation. Kein Proof-of-Concept, sondern produktionsreife Implementierung.",
  },
  approach: {
    title: "Wie wir arbeiten",
    text: "System-Design, Architektur, Implementierung. Wir nutzen bewährte Tools wie Make, Vapi und OpenAI – bauen aber keine Abhängigkeiten zu uns. Nach Übergabe gehört das System vollständig dem Kunden.",
  },
  founder:
    "Gegründet von Safak Tepecik mit 8 Jahren Erfahrung im B2B-Softwarevertrieb. Der Fokus liegt auf Systemen, die messbare Ergebnisse liefern, nicht auf Slides.",
};
---

<BaseLayout
  title={content.title}
  description={content.description}
  type="website"
>
  <section class="py-20 md:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-8">Über uns</h1>

        <div class="prose prose-invert prose-lg max-w-none">
          <!-- Company -->
          <div class="bg-card p-8 rounded-2xl border border-white/5 mb-8">
            <h2 class="text-2xl font-bold mb-4 text-lime-400">
              {content.company.title}
            </h2>
            <p class="text-lg text-white leading-relaxed">
              {content.company.text}
            </p>
          </div>

          <!-- Systems & Approach Grid -->
          <div class="grid md:grid-cols-2 gap-8 mb-12">
            <div class="bg-card p-8 rounded-2xl border border-white/5">
              <h2 class="text-2xl font-bold mb-4 text-lime-400">
                {content.systems.title}
              </h2>
              <p class="text-muted-foreground">{content.systems.text}</p>
            </div>
            <div class="bg-card p-8 rounded-2xl border border-white/5">
              <h2 class="text-2xl font-bold mb-4 text-lime-400">
                {content.approach.title}
              </h2>
              <p class="text-muted-foreground">{content.approach.text}</p>
            </div>
          </div>

          <!-- Founder Context -->
          <p class="text-muted-foreground text-center italic mb-12">
            {content.founder}
          </p>

          <div class="flex justify-center">
            <a
              href="/kontakt/"
              class="inline-flex items-center justify-center h-12 px-8 rounded-xl bg-lime-500 text-black font-bold hover:bg-lime-400 transition-colors"
            >
              System anfragen
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
