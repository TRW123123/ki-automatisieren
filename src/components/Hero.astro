<section class="relative min-h-[85vh] md:min-h-screen flex items-center justify-center pt-20" aria-label="Hero section">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-gradient-to-br from-background via-muted/20 to-background" aria-hidden="true"></div>
  <div class="absolute inset-0 bg-grid-pattern opacity-30" aria-hidden="true"></div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 text-center">
    <div class="max-w-4xl lg:max-w-5xl mx-auto space-y-4 md:space-y-8">
      <!-- Main Headlines -->
      <div class="space-y-6 md:space-y-8">
        <h1 class="group headline text-3xl sm:text-4xl md:text-6xl lg:text-7xl text-foreground leading-[1.1] font-bold tracking-tight">
          <span class="block text-white">Ihr Team schl√§ft nachts.</span>
          <span class="block text-lime-400 relative inline-block">
            Unsere KI-Systeme nicht.
            <span class="absolute -bottom-2 left-0 w-full h-1 bg-lime-400 transform scale-x-0 transition-transform duration-500 group-hover:scale-x-100 origin-left"></span>
          </span>
        </h1>
        
        <h2 class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto font-medium leading-relaxed">
          Wir automatisieren alles, von der E-Mail bis zur Rechnung.
        </h2>

        <p class="text-sm md:text-base text-gray-500 font-mono tracking-wide uppercase">
          Ergebnisse statt KI-Hype
        </p>
      </div>
      
      <!-- CTA Button -->
      <div class="pt-4 md:pt-8">
        <button
          onclick="window.openQuickAnalysis()"
          class="bg-lime-500 text-[#030712] hover:bg-lime-400 px-8 md:px-12 py-4 md:py-6 text-lg md:text-xl font-bold rounded-full shadow-[0_0_20px_rgba(163,230,53,0.4)] hover:shadow-[0_0_40px_rgba(163,230,53,0.6)] transform hover:-translate-y-1 transition-all duration-300"
        >
          Jetzt kostenlos starten
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-gradient-radial {
    background-image: radial-gradient(var(--tw-gradient-stops));
  }
</style>
