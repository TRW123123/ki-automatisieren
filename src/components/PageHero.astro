---
interface Props {
  badge?: string;
  title: string;
  description: string;
}

const { badge, title, description } = Astro.props;
---
<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden pt-20" aria-label="Hero section">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-[#030712]"></div>
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:14px_24px] opacity-30"></div>
  <div class="absolute inset-0 bg-gradient-radial from-lime-500/5 to-transparent opacity-50"></div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 text-center">
    <div class="max-w-4xl mx-auto flex flex-col items-center gap-6">

      {badge && (
        <div class="animate-fade-in-up" style="animation-delay: 0.1s;">
          <div class="inline-flex items-center px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur-sm text-sm md:text-base text-gray-400 hover:border-lime-500/50 transition-colors duration-300">
            <span class="relative flex h-2 w-2 mr-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lime-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-lime-500"></span>
            </span>
            {badge}
          </div>
        </div>
      )}

      <!-- Main Headline -->
      <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.2s;">
        <h1 class="text-4xl sm:text-5xl md:text-6xl text-white leading-[1.1] tracking-tight font-bold text-balance">
          {title}
        </h1>
      </div>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.3s;">
        {description}
      </p>

    </div>
  </div>
</section>

<style>
  .bg-gradient-radial {
    background-image: radial-gradient(var(--tw-gradient-stops));
  }
</style>
