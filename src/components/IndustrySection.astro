---
import { industries } from "../data/industries";
---

<section class="py-24 bg-card/30 border-y border-white/5">
    <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl md:text-5xl font-bold mb-6">
                Branchen-LÃ¶sungen
            </h2>
            <p class="text-xl text-muted-foreground">
                Keine "One Size Fits All" Beratung. Wir haben fertige Blaupausen
                fÃ¼r Ihre Industrie.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                industries.map((industry) => (
                    <a
                        href={`/branchen/${industry.slug}`}
                        class="group block p-8 rounded-2xl bg-background border border-white/10 hover:border-lime-500/50 transition-all hover:shadow-[0_0_30px_rgba(163,230,53,0.1)] relative overflow-hidden"
                    >
                        <div class="absolute top-0 right-0 p-4 opacity-50 group-hover:opacity-100 transition-opacity">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-6 h-6 text-lime-400 -translate-x-2 translate-y-2 group-hover:translate-x-0 group-hover:translate-y-0 transition-transform"
                            >
                                <>
                                    <path d="M7 7h10v10" />
                                    <path d="M7 17 17 7" />
                                </>
                            </svg>
                        </div>

                        <div class="mb-6">
                            <span class="inline-block px-3 py-1 rounded-full bg-lime-500/10 text-lime-400 text-xs font-bold uppercase tracking-wider mb-4 border border-lime-500/20">
                                {industry.caseStudy.company} Case
                            </span>
                            <h3 class="text-2xl font-bold mb-2 group-hover:text-lime-400 transition-colors">
                                {industry.hero.title}
                            </h3>
                        </div>

                        <p class="text-muted-foreground mb-6 line-clamp-3">
                            {industry.seo.description}
                        </p>

                        <div class="flex items-center gap-2 text-sm font-medium text-white">
                            <span class="w-2 h-2 rounded-full bg-lime-500" />
                            {industry.benefits.items[0]}
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
